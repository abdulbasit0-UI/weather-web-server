<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/weather.png">
    <title>Weather App</title>
    <link rel="stylesheet" href="css/style.css" />

  </head>
  <body>
    <div class="main-content">
      {{>header}}
      <p>{{name}}</p>

      <div class="weather-error">

      </div>
      <form>
        <input type="search" placeholder="Location">
        <button>Search</button>
      </form>


      <div class="weather-data">
        <p class="weather-location"></p>
        <p class="weather-forecast"></p>
        <div class="weather-icon"></div>
        <div class="weather-info">
          <div class="weather-info-box weather-info-box-1">

          </div>
          <div class="weather-info-box weather-info-box-2">

          </div>

            <div class="weather-info-box weather-info-box-3">

          </div>
        </div>
      </div>
    </div>
      {{>footer}}

    <script src="/js/app.js"></script>
  </body>
</html>